INTERNSHIPS_DB_PROJECT ?= internships-db-project
INTERNSHIPS_DB_IMAGE_VERSION ?= 0.0.1
INTERNSHIPS_DB_IMAGE_NAME ?= internships-db
INTERNSHIPS_DB_NAME ?= internshipsbackenddb
INTERNSHIPS_DB_USERNAME ?= internshipsbackenddb
INTERNSHIPS_DB_PASSWORD ?= internshipsbackenddbpwd
INTERNSHIPS_DB_PORT ?= 5432
INTERNSHIPS_DB_HOST ?= internships-db
INTERNSHIPS_DB_DATA_PATH ?= /src/docker/internships-db-data/
INTERNSHIPS_NETWORK ?= "internships-network"

.PHONY: build
build:
	docker build -t $(INTERNSHIPS_DB_IMAGE_NAME):$(INTERNSHIPS_DB_IMAGE_VERSION) -f Dockerfile .

.PHONY: run
run:
	- mkdir -p $(INTERNSHIPS_DB_DATA_PATH)
	APP_PROXY_NETWORK=$(INTERNSHIPS_NETWORK) \
	APP_DB_IMAGE_VERSION=$(INTERNSHIPS_DB_IMAGE_VERSION) \
	APP_DB_IMAGE_NAME=$(INTERNSHIPS_DB_IMAGE_NAME) \
    APP_DB_USERNAME=$(INTERNSHIPS_DB_USERNAME) \
    APP_DB_PASSWORD=$(INTERNSHIPS_DB_PASSWORD) \
    APP_DB_NAME=$(INTERNSHIPS_DB_NAME) \
    APP_DB_PORT=$(INTERNSHIPS_DB_PORT) \
    APP_DB_HOST=$(INTERNSHIPS_DB_HOST) \
    APP_DB_DATA_PATH=$(INTERNSHIPS_DB_DATA_PATH) \
	docker-compose -p $(INTERNSHIPS_DB_PROJECT) -f docker-compose.yaml up -d
