INTERNSHIPS_EMAIL_CONSUMER_PROJECT ?= internships-email-consumer-project
INTERNSHIPS_EMAIL_CONSUMER_IMAGE_NAME ?= internships-email-consumer
INTERNSHIPS_EMAIL_CONSUMER_IMAGE_VERSION ?= 0.0.1
INTERNSHIPS_EMAIL_CONSUMER_KEY ?= 383638b1-tged-4caz-8347-643am54a1234
INTERNSHIPS_MESSAGE_BROKER_USERNAME ?= internshipsbackendmessagebroker
INTERNSHIPS_MESSAGE_BROKER_PASSWORD ?= internshipsbackendmessagebrokerpwd
INTERNSHIPS_MESSAGE_BROKER_HOST ?= message-broker
INTERNSHIPS_MESSAGE_BROKER_PORT ?= 5672
INTERNSHIPS_EMAIL_CONSUMER_PROXY_NETWORK ?= "internships-network"
INTERNSHIPS_EMAIL_URL ?= http://email-api:8008

.PHONY: build
build:
	docker build -t $(INTERNSHIPS_EMAIL_CONSUMER_IMAGE_NAME):$(INTERNSHIPS_EMAIL_CONSUMER_IMAGE_VERSION) -f Dockerfile .

.PHONY: run
run:
	- docker network create $(INTERNSHIPS_EMAIL_CONSUMER_PROXY_NETWORK)
	sleep 1
	APP_EMAIL_CONSUMER_IMAGE_VERSION=$(INTERNSHIPS_EMAIL_CONSUMER_IMAGE_VERSION) \
    APP_EMAIL_CONSUMER_IMAGE_NAME=$(INTERNSHIPS_EMAIL_CONSUMER_IMAGE_NAME) \
    APP_PROXY_NETWORK=$(INTERNSHIPS_EMAIL_CONSUMER_PROXY_NETWORK) \
    APP_MESSAGE_BROKER_USERNAME=$(INTERNSHIPS_MESSAGE_BROKER_USERNAME) \
    APP_MESSAGE_BROKER_PASSWORD=$(INTERNSHIPS_MESSAGE_BROKER_PASSWORD) \
    APP_MESSAGE_BROKER_HOST=$(INTERNSHIPS_MESSAGE_BROKER_HOST) \
    APP_MESSAGE_BROKER_PORT=$(INTERNSHIPS_MESSAGE_BROKER_PORT) \
    APP_EMAIL_CONSUMER_KEY=$(INTERNSHIPS_EMAIL_CONSUMER_KEY) \
    APP_EMAIL_URL=$(INTERNSHIPS_EMAIL_URL) \
	docker-compose -p $(INTERNSHIPS_EMAIL_CONSUMER_PROJECT) -f docker-compose.yaml up -d
