INTERNSHIPS_POINTS_API_PROJECT ?= internships-points-api-project
INTERNSHIPS_POINTS_API_IMAGE_VERSION ?= 0.0.1
INTERNSHIPS_POINTS_API_IMAGE_NAME ?= internships-points-api
INTERNSHIPS_POINTS_DB_NAME ?= internshipspointsbackenddb
INTERNSHIPS_POINTS_DB_USERNAME ?= internshipspointsbackenddb
INTERNSHIPS_POINTS_DB_PASSWORD ?= internshipspointsbackenddbpwd
INTERNSHIPS_POINTS_DB_PORT ?= 5432
INTERNSHIPS_POINTS_DB_HOST ?= points-db
INTERNSHIPS_POINTS_API_PROXY_NETWORK ?= "internships-network"
INTERNSHIPS_POINTS_CONSUMER_KEY ?= 272638b1-eced-4cfa-8249-646ac04e1234

.PHONY: run
run:
	- docker network create $(INTERNSHIPS_POINTS_API_PROXY_NETWORK)
	sleep 1
	APP_POINTS_API_IMAGE_VERSION=$(INTERNSHIPS_POINTS_API_IMAGE_VERSION) \
    APP_POINTS_API_IMAGE_NAME=$(INTERNSHIPS_POINTS_API_IMAGE_NAME) \
    APP_PROXY_NETWORK=$(INTERNSHIPS_POINTS_API_PROXY_NETWORK) \
    APP_POINTS_DB_USERNAME=$(INTERNSHIPS_POINTS_DB_USERNAME) \
    APP_POINTS_DB_PASSWORD=$(INTERNSHIPS_POINTS_DB_PASSWORD) \
    APP_POINTS_DB_NAME=$(INTERNSHIPS_POINTS_DB_NAME) \
    APP_POINTS_DB_HOST=$(INTERNSHIPS_POINTS_DB_HOST) \
    APP_POINTS_DB_PORT=$(INTERNSHIPS_POINTS_DB_PORT) \
    APP_POINTS_CONSUMER_KEY=$(INTERNSHIPS_POINTS_CONSUMER_KEY) \
    docker-compose -p $(INTERNSHIPS_POINTS_API_PROJECT) -f docker-compose.yaml up -d

.PHONY: build
build:
	docker build -t $(INTERNSHIPS_POINTS_API_IMAGE_NAME):$(INTERNSHIPS_POINTS_API_IMAGE_VERSION) -f Dockerfile .
