INTERNSHIPS_TIMESHEET_CONSUMER_PROJECT ?= internships-timesheet-consumer-project
INTERNSHIPS_TIMESHEET_CONSUMER_IMAGE_NAME ?= internships-timesheet-consumer
INTERNSHIPS_TIMESHEET_CONSUMER_IMAGE_VERSION ?= 0.0.1
INTERNSHIPS_MESSAGE_BROKER_USERNAME ?= internshipsbackendmessagebroker
INTERNSHIPS_MESSAGE_BROKER_PASSWORD ?= internshipsbackendmessagebrokerpwd
INTERNSHIPS_MESSAGE_BROKER_HOST ?= message-broker
INTERNSHIPS_MESSAGE_BROKER_PORT ?= 5672
INTERNSHIPS_TIMESHEET_CONSUMER_PROXY_NETWORK ?= "internships-network"
INTERNSHIPS_TIMESHEET_URL ?= http://timesheet-api:8008

.PHONY: build
build:
	docker build -t $(INTERNSHIPS_TIMESHEET_CONSUMER_IMAGE_NAME):$(INTERNSHIPS_TIMESHEET_CONSUMER_IMAGE_VERSION) -f Dockerfile .

.PHONY: run
run:
	- docker network create $(INTERNSHIPS_TIMESHEET_CONSUMER_PROXY_NETWORK)
	sleep 1
	APP_TIMESHEET_CONSUMER_IMAGE_VERSION=$(INTERNSHIPS_TIMESHEET_CONSUMER_IMAGE_VERSION) \
    APP_TIMESHEET_CONSUMER_IMAGE_NAME=$(INTERNSHIPS_TIMESHEET_CONSUMER_IMAGE_NAME) \
    APP_PROXY_NETWORK=$(INTERNSHIPS_TIMESHEET_CONSUMER_PROXY_NETWORK) \
    APP_MESSAGE_BROKER_USERNAME=$(INTERNSHIPS_MESSAGE_BROKER_USERNAME) \
    APP_MESSAGE_BROKER_PASSWORD=$(INTERNSHIPS_MESSAGE_BROKER_PASSWORD) \
    APP_MESSAGE_BROKER_HOST=$(INTERNSHIPS_MESSAGE_BROKER_HOST) \
    APP_MESSAGE_BROKER_PORT=$(INTERNSHIPS_MESSAGE_BROKER_PORT) \
    APP_TIMESHEET_URL=$(INTERNSHIPS_TIMESHEET_URL) \
	docker-compose -p $(INTERNSHIPS_TIMESHEET_CONSUMER_PROJECT) -f docker-compose.yaml up -d
