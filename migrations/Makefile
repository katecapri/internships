INTERNSHIPS_MIGRATIONS_PROJECT ?= internships-migrations-project
INTERNSHIPS_MIGRATIONS_IMAGE_VERSION ?= 0.0.1
INTERNSHIPS_MIGRATIONS_IMAGE_NAME ?= internships-migrations
INTERNSHIPS_DB_NAME ?= internshipsbackenddb
INTERNSHIPS_DB_USERNAME ?= internshipsbackenddb
INTERNSHIPS_DB_PASSWORD ?= internshipsbackenddbpwd
INTERNSHIPS_DB_PORT ?= 5432
INTERNSHIPS_DB_HOST ?= internships-db
INTERNSHIPS_NETWORK ?= "internships-network"

.PHONY: run
run:
	- docker network create $(INTERNSHIPS_NETWORK)
	sleep 1
	APP_MIGRATIONS_IMAGE_VERSION=$(INTERNSHIPS_MIGRATIONS_IMAGE_VERSION) \
    APP_MIGRATIONS_IMAGE_NAME=$(INTERNSHIPS_MIGRATIONS_IMAGE_NAME) \
    APP_PROXY_NETWORK=$(INTERNSHIPS_NETWORK) \
    APP_DB_USERNAME=$(INTERNSHIPS_DB_USERNAME) \
    APP_DB_PASSWORD=$(INTERNSHIPS_DB_PASSWORD) \
    APP_DB_NAME=$(INTERNSHIPS_DB_NAME) \
    APP_DB_PORT=$(INTERNSHIPS_DB_PORT) \
    APP_DB_HOST=$(INTERNSHIPS_DB_HOST) \
    docker-compose -p $(INTERNSHIPS_MIGRATIONS_PROJECT) -f docker-compose.yaml up -d

.PHONY: build
build:
	docker build -t $(INTERNSHIPS_MIGRATIONS_IMAGE_NAME):$(INTERNSHIPS_MIGRATIONS_IMAGE_VERSION) -f Dockerfile .
