INTERNSHIPS_POINTS_CONSUMER_PROJECT ?= internships-points-consumer-project
INTERNSHIPS_POINTS_CONSUMER_IMAGE_NAME ?= internships-points-consumer
INTERNSHIPS_POINTS_CONSUMER_IMAGE_VERSION ?= 0.0.1
INTERNSHIPS_POINTS_CONSUMER_KEY ?= 272638b1-eced-4cfa-8249-646ac04e1234
INTERNSHIPS_MESSAGE_BROKER_USERNAME ?= internshipsbackendmessagebroker
INTERNSHIPS_MESSAGE_BROKER_PASSWORD ?= internshipsbackendmessagebrokerpwd
INTERNSHIPS_MESSAGE_BROKER_HOST ?= message-broker
INTERNSHIPS_MESSAGE_BROKER_PORT ?= 5672
INTERNSHIPS_POINTS_CONSUMER_PROXY_NETWORK ?= "internships-network"
INTERNSHIPS_POINTS_URL ?= http://points-api:8008

.PHONY: build
build:
	docker build -t $(INTERNSHIPS_POINTS_CONSUMER_IMAGE_NAME):$(INTERNSHIPS_POINTS_CONSUMER_IMAGE_VERSION) -f Dockerfile .

.PHONY: run
run:
	- docker network create $(INTERNSHIPS_POINTS_CONSUMER_PROXY_NETWORK)
	sleep 1
	APP_POINTS_CONSUMER_IMAGE_VERSION=$(INTERNSHIPS_POINTS_CONSUMER_IMAGE_VERSION) \
    APP_POINTS_CONSUMER_IMAGE_NAME=$(INTERNSHIPS_POINTS_CONSUMER_IMAGE_NAME) \
    APP_PROXY_NETWORK=$(INTERNSHIPS_POINTS_CONSUMER_PROXY_NETWORK) \
    APP_MESSAGE_BROKER_USERNAME=$(INTERNSHIPS_MESSAGE_BROKER_USERNAME) \
    APP_MESSAGE_BROKER_PASSWORD=$(INTERNSHIPS_MESSAGE_BROKER_PASSWORD) \
    APP_MESSAGE_BROKER_HOST=$(INTERNSHIPS_MESSAGE_BROKER_HOST) \
    APP_MESSAGE_BROKER_PORT=$(INTERNSHIPS_MESSAGE_BROKER_PORT) \
    APP_POINTS_CONSUMER_KEY=$(INTERNSHIPS_POINTS_CONSUMER_KEY) \
    APP_POINTS_URL=$(INTERNSHIPS_POINTS_URL) \
	docker-compose -p $(INTERNSHIPS_POINTS_CONSUMER_PROJECT) -f docker-compose.yaml up -d
